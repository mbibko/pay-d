{% extends 'layouts/main.njk' %}
{% block content %}
  <div class="container my-auto py-10">
    <div class="mx-auto max-w-[690px]">
      <div class="flex justify-center items-center gap-8 mb-10">
        <div>
          <a href="/" class="block h-full"
            ><span class="sr-only">Pay-D</span>
            <svg width="157" height="48" class="h-full" xmlns="http://www.w3.org/2000/svg">
              <use xlink:href="#icon-logo"></use>
            </svg>
          </a>
        </div>
        <svg width="190" height="31" class="h-full" xmlns="http://www.w3.org/2000/svg">
          <use xlink:href="#icon-toyota-logo"></use>
        </svg>
      </div>
      <div
        class="flex flex-col items-center rounded-2xl bg-white px-6 py-10 md:p-16 shadow-[0px_0px_15px_0px_rgba(0,_0,_0,_0.05)]"
      >
        <svg class="fill-secondary" width="75" height="63" xmlns="http://www.w3.org/2000/svg">
          <use xlink:href="#icon-simple-email-r"></use>
        </svg>
        <h2 class="h2 text-secondary font-bold leading-tight mb-4">Done!</h2>
        <p class="text-pretty text-center text-[#5D5D5D]">
          Please check your inbox, you should receive a confirmation link, to authenticate your access to this website.
        </p>
      </div>
    </div>
  </div>
{% endblock %}
