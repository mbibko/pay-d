{% extends 'layouts/main.njk' %}
{% block content %}
  <div class="mb-20">{% include "./components/header.njk" %}</div>
  <div class="container">
    {{ section.header('Product Features of Pay-D', "Feature overview", "mb-5", "h1") }}
    <div class="mx-auto max-w-[1046px]">
      <div class="mb-10 flex flex-wrap gap-5">
        {% for item in featuresData.items2 %}
          <div style="--image-url: url('/img/bg/card-bg/card-{{ loop.index - 1 }}.jpg')" class="bg-cover bg-[image:var(--image-url)] flex flex-col gap-4 md:flex-row md:justify-between md:items-center w-1/2 flex-1 basis-1/3 rounded-xl bg-[#DFE2EC] p-8  ">
            <div class="flex gap-4">
              <!--  -->
              <div class="relative flex size-[64px] flex-none items-center justify-center rounded-xl bg-white">
                {% if item.data[0].included %}
                  <span
                    class="custom-gradient-primary absolute left-[-2px] top-[-4px] block size-[18px] rounded-full"
                  ></span>
                {% endif %}
                {% if item.data[1].included %}
                  <span
                    class="custom-gradient-secondary absolute left-[-8px] top-[-4px] block size-[18px] rounded-full"
                  ></span>
                {% endif %}
                <svg class="flex-none fill-primary" width="30" height="30" xmlns="http://www.w3.org/2000/svg">
                  <use xlink:href="#icon-simple-{{ item.icon }}"></use>
                </svg>
              </div>
              <div class="flex-1 font-mono text-xl font-bold text-primary">{{ item.title | safe }}</div>
            </div>
            <a href="#" class="btn btn-xs btn-secondary">
              LEARN&nbsp;MORE
              <svg class="ms-2 fill-primary" width="16" height="16" xmlns="http://www.w3.org/2000/svg">
                <use xlink:href="#icon-arr"></use>
              </svg>
            </a>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
{% endblock %}
