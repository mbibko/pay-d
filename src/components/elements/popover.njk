{% macro popover(options) %}
  {% if options.arrPos == "left" %}
    {% set arrPosClassName = "left-0 top-1/2 -translate-x-3" %}
  {% else %}
    {% set arrPosClassName = "left-1/2 top-full -translate-x-3" %}
  {% endif %}
  <div class="custom-gradient-primary {{ options.className }} absolute rounded-xl p-4 text-xl font-bold text-white">
    {{ options.title | safe }}
    <svg
      class="{{ options.arrClassName }} {{ arrPosClassName }} absolute"
      width="30"
      height="14"
      xmlns="http://www.w3.org/2000/svg"
    >
      <use xlink:href="#icon-corner"></use>
    </svg>
  </div>
{% endmacro %}
