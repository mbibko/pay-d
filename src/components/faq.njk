<section
  class="bg-[#F9F9FA] bg-[url('/img/bg/faq-bg-mobile.svg')] bg-[length:100%_auto] bg-no-repeat pb-8 pt-[5rem] lg:bg-[url('/img/bg/faq.svg')] lg:bg-[0%_50%]"
>
  <div
    class="container flex max-w-[600px] flex-col items-center lg:max-w-[800px]"
    data-aos="fade-up"
    data-aos-duration="800"
  >
    <div class="mb-14">
      {{ section.header('Questions&nbsp;& answers', "Frequently asked questions", "lg:mb-4") }}

      <p class="text-center text-[#343434]">
        If the question you are looking for is not listed below, feel free to ask our
        <a href="#" class="font-bold text-primary underline">service team</a>.
      </p>
    </div>

    <!-- FAQ -->
    <div
      class="flex w-full flex-col gap-4 lg:pb-14"
      data-accordion-wrapper
      id="accordion-collapse-parent"
      data-accordion="collapse"
    >
      <!-- Accordion -->
      {% for item in faqData.items %}
        {% set loopIndex = loop.index %}
        <div
          data-accordion-item
          class="border-color rounded-xl border bg-white px-6 py-4 shadow-[0px_0px_9px_0px_rgba(0,0,0,0.10)]"
        >
          <div class="accordion-collapse-heading" id="accordion-collapse-heading-{{ loopIndex }}">
            <button
              data-accordion-target="#accordion-collapse-body-{{ loopIndex }}"
              aria-expanded="{% if loop.first %}true{% else %}false{% endif %}"
              aria-controls="accordion-collapse-body-{{ loopIndex }}"
              class="group inline-flex w-full items-center justify-between gap-x-3 rounded-lg text-start font-mono text-lg font-bold text-primary transition aria-expanded:text-primary lg:text-xl"
            >
              {{ item.title }}
              <span
                class="custom-gradient-primary flex size-8 items-center justify-center rounded-lg group-hover:rotate-180"
              >
                <svg class="flex-none" width="12" height="12" xmlns="http://www.w3.org/2000/svg">
                  <use class="group-[&[aria-expanded=true]]:hidden" xlink:href="#icon-plus"></use>
                  <use class="group-[&[aria-expanded=false]]:hidden" xlink:href="#icon-minus"></use>
                </svg>
              </span>
            </button>
          </div>
          <div
            id="accordion-collapse-body-{{ loopIndex }}"
            aria-labelledby="accordion-collapse-heading-{{ loopIndex }}"
            class="accordion-collapse-body {% if loop.first %}{% else %}hidden{% endif %}"
          >
            <div id="accordion-collapse-nested-{{ loopIndex }}" data-accordion-wrapper data-accordion="collapse">
              {% for child in item.child %}
                <div class="border-b py-4">
                  <div
                    class="accordion-collapse-heading"
                    id="accordion-collapse-heading-nested-{{ loopIndex }}-{{ loop.index }}"
                  >
                    <button
                      data-accordion-target="#accordion-collapse-body-nested-{{ loopIndex }}-{{ loop.index }}"
                      aria-expanded="{% if loop.first %}true{% else %}false{% endif %}"
                      aria-controls="accordion-collapse-body-nested-{{ loopIndex }}-{{ loop.index }}"
                      class="group inline-flex w-full items-center justify-between gap-x-3 rounded-lg text-start transition aria-expanded:text-primary [&[aria-expanded=true]]:text-primary"
                    >
                      {{ child.title }}
                      <svg
                        class="flex-none group-[&[aria-expanded=true]]:rotate-180"
                        width="12"
                        height="12"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <use xlink:href="#icon-{% if loop.first %}arr-bottom{% else %}arr-bottom{% endif %}"></use>
                      </svg>
                    </button>
                  </div>
                  <div
                    id="accordion-collapse-body-nested-{{ loopIndex }}-{{ loop.index }}"
                    aria-labelledby="accordion-collapse-heading-nested-{{ loopIndex }}-{{ loop.index }}"
                    class="accordion-collapse-body {% if loop.first %}{% else %}hidden{% endif %} text-sm"
                    role="region"
                  >
                    <div class="mt-3 rounded-xl bg-[#f8f8f8] p-4">
                      {% if loop.index === 2 %}
                        <p>
                          Lorem ipsum dolor sit amet, consectetur adipisicing elit. Alias autem debitis dicta dolore
                          expedita fugiat inventore labore mollitia nihil, pariatur, perferendis placeat quaerat qui
                          repellat repellendus sed sit tenetur ullam!
                        </p>
                      {% endif %}

                      {{ child.text }}
                    </div>
                  </div>
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      {% endfor %}
      <!-- End Accordion -->
    </div>
    <!-- End FAQ -->
  </div>
</section>
