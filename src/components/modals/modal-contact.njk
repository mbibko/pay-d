{% set id = "contact" %}
{%- call modal.modal({id: id, bodyClass: "sm:max-w-[750px]"}) -%}
  <div
    class="mb-3 flex items-center justify-end gap-4"
    aria-label="Close"
    role="button"
    data-modal-toggle="modal-{{ id }}"
  >
    <span class="font-mono text-lg font-bold text-primary">close</span>
    <svg class="icon flex-none fill-primary" width="16" height="16" xmlns="http://www.w3.org/2000/svg">
      <use xlink:href="#icon-close-m"></use>
    </svg>
  </div>
  <!--  -->
  <div class="overflow-hidden rounded-2xl bg-white shadow-[0_0_12px_0_rgba(0,0,0,0.10)]">
    <!-- body -->
    <div
      class="flex flex-col items-center justify-center bg-[url(/img/bg/contact.jpg)] bg-cover bg-center bg-no-repeat py-10 text-center text-white md:min-h-[262px]"
    >
      <h4 class="h4 mb-1 font-bold text-white">Get in touch.</h4>
      <span class="font-mono text-lg">
        Do you have any questions?
        <br />
        Feel free to ask us!
      </span>
    </div>
    <!--  -->
    <div class="px-4 py-8 md:p-12">{% include "../forms/form-contact.njk" %}</div>
  </div>
{%- endcall -%}
