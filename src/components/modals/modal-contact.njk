<div
  id="modal-contact"
  class="js-modal [&.show]:opacity-1 group relative z-10 duration-300 ease-out [&:not(.active)]:hidden [&:not(.show)]:opacity-0"
  aria-labelledby="modal-title"
  role="dialog"
  aria-modal="true"
>
  <div class="fixed inset-0 bg-white bg-opacity-85 backdrop-blur-sm transition-opacity" aria-hidden="true"></div>

  <div class="fixed inset-0 z-50 w-screen overflow-y-auto">
    <div class="modal-backdrop flex min-h-full items-center justify-center p-6 text-center mdm:p-0">
      <div class="relative transform text-left transition-all sm:my-8 sm:w-full max-sm:w-full sm:max-w-[750px]">
        <div
          class="mb-3 flex items-center justify-end gap-4"
          aria-label="Close"
          role="button"
          data-modal-toggle="modal-contact"
        >
          <span class="font-mono text-lg font-bold text-primary">close</span>
          <svg class="icon flex-none fill-primary" width="16" height="16" xmlns="http://www.w3.org/2000/svg">
            <use xlink:href="#icon-close-m"></use>
          </svg>
        </div>
        <!--  -->
        <div class="shadow-[0_0_12px_0_rgba(0,0,0,0.10)] overflow-hidden rounded-2xl bg-white">
          <!-- body -->
          <div
            class="flex md:min-h-[262px] flex-col items-center justify-center bg-[url(/img/bg/contact.jpg)] bg-cover bg-center bg-no-repeat py-10 text-center text-white"
          >
            <h4 class="h4 mb-1 font-bold text-white">Get in touch.</h4>
            <span class="font-mono text-lg">
              Do you have any questions?
              <br />
              Feel free to ask us!
            </span>
          </div>
          <!--  -->
          <div class="px-4 py-8 md:p-12">{% include "../forms/form-contact.njk" %}</div>
        </div>
      </div>
    </div>
  </div>
</div>
